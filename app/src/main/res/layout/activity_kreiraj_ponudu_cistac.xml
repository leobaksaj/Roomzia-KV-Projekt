<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateOfferCleanerActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kreiraj ponudu za oglas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/textViewNaslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textOpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opis: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNaslov"
        app:layout_constraintEnd_toStartOf="@+id/textViewOpis"
        android:layout_marginTop="15dp"
        android:paddingRight="10dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewOpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textOpis"
        app:layout_constraintTop_toBottomOf="@+id/textViewNaslov" />

    <TextView
        android:id="@+id/textGrad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grad:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOpis"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/textViewGrad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textGrad"
        app:layout_constraintTop_toBottomOf="@+id/textViewOpis"
        android:layout_marginTop="15dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textUlica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ulica:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGrad"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/textViewUlica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textUlica"
        app:layout_constraintTop_toBottomOf="@+id/textGrad"
        android:layout_marginTop="15dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textDatumIVrijeme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:text="Datum i vrijeme:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUlica" />

    <TextView
        android:id="@+id/textViewDatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textDatumIVrijeme"
        app:layout_constraintTop_toBottomOf="@+id/textViewUlica"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textViewVrijeme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textViewDatum"
        app:layout_constraintTop_toBottomOf="@+id/textViewUlica"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textKontak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_marginStart="50dp"
        android:text="Kontakt:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDatumIVrijeme" />

    <TextView
        android:id="@+id/textViewKontakt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textKontak"
        app:layout_constraintTop_toBottomOf="@+id/textDatumIVrijeme" />
    <TextView
        android:id="@+id/textKvadratura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kvadratura stana: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textKontak"
        android:layout_marginTop="15dp"
        android:layout_marginStart="50dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textViewKvadratura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textKvadratura"
        app:layout_constraintTop_toBottomOf="@+id/textKontak" />

    <TextView
        android:id="@+id/textPonudiCijenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cijena-> (kn/h): "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textKvadratura"
        android:layout_marginTop="22dp"
        android:textSize="20dp"
        android:layout_marginStart="50dp"/>

    <EditText
        android:id="@+id/editTextCijena"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textPonudiCijenu"
        app:layout_constraintTop_toBottomOf="@+id/textKvadratura"
        android:layout_marginTop="15dp"
        android:layout_marginStart="60dp"/>

    <Button
        android:id="@+id/buttonPošaljiPonudu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pošalji"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textVieID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="546dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textViewProviderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="546dp"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>